<div class="dh-adv-manager-content">
    <div class="status-header">
        <h3>Select Available Compendiums</h3>
        <p style="font-size: 0.8em; color: #aaa; margin-top: 5px;">
            Check the compendiums you want to appear in the "Source" dropdown of the Live Preview.
        </p>
    </div>

    <div class="compendium-list" style="max-height: 300px; overflow-y: auto; margin: 10px 0; border: 1px solid #444; padding: 5px; background: rgba(0,0,0,0.2);">
        {{#if hasCompendiums}}
            {{#each compendiumList}}
            <div class="form-group" style="display: flex; align-items: center; padding: 5px; border-bottom: 1px solid #333;">
                <input type="checkbox" name="{{this.id}}" id="chk-{{this.id}}" {{#if this.checked}}checked{{/if}} style="margin-right: 10px;">
                <label for="chk-{{this.id}}" style="flex: 1; cursor: pointer;">
                    <strong>{{this.label}}</strong> <br>
                    <span style="font-size: 0.8em; color: #777;">({{this.package}})</span>
                </label>
            </div>
            {{/each}}
        {{else}}
            <p style="text-align: center; color: #888; padding: 20px;">No other Actor compendiums found.</p>
        {{/if}}
    </div>

    <footer class="sheet-footer">
        <button type="submit">
            <i class="fas fa-save"></i> Save Selection
        </button>
    </footer>
</div>