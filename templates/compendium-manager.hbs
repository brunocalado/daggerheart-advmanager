<div class="dh-adv-manager-content">
    <div class="status-header">
        <h3>Select Available Compendiums</h3>
        <p style="font-size: 0.8em; color: #aaa; margin-top: 5px;">
            Choose compendiums to be used as sources.
        </p>
    </div>

    <!-- Navigation Tabs -->
    <nav class="dh-tabs">
        <a class="dh-tab-link active" data-tab="actors">
            <i class="fas fa-users"></i> Actors
        </a>
        <a class="dh-tab-link" data-tab="features">
            <i class="fas fa-suitcase"></i> Features
        </a>
    </nav>

    <!-- Content Area -->
    <div class="dh-tabs-body" style="height: 320px; overflow-y: hidden; display: flex; flex-direction: column;">
        
        <!-- Tab: Actors -->
        <div class="dh-tab-content active" data-tab="actors">
            <div class="compendium-list">
                {{#if hasActors}}
                    {{#each actorList}}
                    <div class="form-group compendium-row">
                        <input type="checkbox" name="{{this.id}}" id="chk-{{this.id}}" {{#if this.checked}}checked{{/if}}>
                        <label for="chk-{{this.id}}" class="compendium-label">
                            <strong>{{this.label}}</strong>
                            <span class="pkg-name">({{this.package}})</span>
                        </label>
                    </div>
                    {{/each}}
                {{else}}
                    <p class="empty-msg">No other Actor compendiums found.</p>
                {{/if}}
            </div>
        </div>

        <!-- Tab: Features -->
        <div class="dh-tab-content" data-tab="features">
            <div class="compendium-list">
                {{#if hasFeatures}}
                    {{#each featureList}}
                    <div class="form-group compendium-row">
                        <input type="checkbox" name="{{this.id}}" id="chk-{{this.id}}" {{#if this.checked}}checked{{/if}}>
                        <label for="chk-{{this.id}}" class="compendium-label">
                            <strong>{{this.label}}</strong>
                            <span class="pkg-name">({{this.package}})</span>
                        </label>
                    </div>
                    {{/each}}
                {{else}}
                    <p class="empty-msg">No Item compendiums found.</p>
                {{/if}}
            </div>
        </div>

    </div>

    <footer class="sheet-footer">
        <button type="submit">
            <i class="fas fa-save"></i> Save Selection
        </button>
    </footer>
</div>